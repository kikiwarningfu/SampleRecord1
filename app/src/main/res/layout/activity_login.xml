<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <ImageView
        android:layout_width="@dimen/dp_41"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp_55"
        android:src="@mipmap/img_splash_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_47"
        android:text="您好，欢迎来到"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:text="华清采样记录系统"
        android:textColor="#ff000000"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入您的账号"
            android:inputType="text"
            android:textColorHint="#999999"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_18"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_account_close"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_login_close"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#999999"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入您的密码"
            android:inputType="text"
            android:textColorHint="#999999"
            android:textColor="@color/black"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dp_18"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_passord_close"
            android:layout_alignParentRight="true"
            android:src="@mipmap/img_login_close"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"/>
    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#999999"/>

    <TextView
        android:onClick="onClick"
        android:background="#36AB87"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_72"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        android:paddingTop="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登    录"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_18"
        />
</LinearLayout>
</layout>