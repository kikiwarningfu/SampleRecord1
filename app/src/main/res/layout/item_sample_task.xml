<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_content"
    android:background="@drawable/shape_write_corners"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知单编号"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_bianhao"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20SZ0607SZ-1-1-1-1"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委托单位"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_weituo"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="河北华清环境集团科技有限公司"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="受检单位"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_shoujian"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="河北华清环境集团科技有限公司"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检测地址"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_address"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="河北省石家庄市裕华区富强大街102号"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_12"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入场时间"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2022年10月25日"
                android:textColor="#ff000000"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_divider"
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"/>
</LinearLayout>