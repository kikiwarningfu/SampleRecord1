                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="受检单位"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/sp_14"
