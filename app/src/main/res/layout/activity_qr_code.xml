<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <com.huaqing.samplerecord.widget.TopBar
        android:id="@id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="1111" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_93">

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_70"
            android:background="@drawable/shape_top_left" />

        <ImageView

            android:id="@+id/iv_logo"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <View

            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@id/iv_logo"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_80"
            android:background="@drawable/shape_bottom_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView

        android:id="@+id/tv_pritener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#34B48F"
        android:gravity="center"
        android:paddingTop="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_16"
        android:text="打印"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_16">

    </TextView>
</LinearLayout>